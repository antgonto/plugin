<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="marker.commands.category"
            name="AVIB">
      </category>
      <command
            categoryId="marker.commands.category"
            description="Disconnect to Server"
            id="marker.commands.disconnect"
            name="Disconnect Command">
      </command>
      <command
            categoryId="marker.commands.category"
            description="Connect to Server"
            id="marker.commands.connect"
            name="Connect Command">
      </command>
      <command
            categoryId="marker.commands.category"
            description="Send data to Server"
            id="marker.commands.send"
            name="Send Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="marker.handlers.ConnectHandler"
            commandId="marker.commands.connect">
      </handler>
      <handler
            class="marker.handlers.DisconnectHandler"
            commandId="marker.commands.disconnect">
      </handler>
      <handler
            class="marker.handlers.SendHandler"
            commandId="marker.commands.send">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="marker.commands.send"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+2">
      </key>
      <key
            commandId="marker.commands.connect"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+1">
      </key>
      <key
            commandId="marker.commands.disconnect"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+3">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               icon="icons/browser.png"
               id="markertest.menus.menuAVIB"
               label="AVIB"
               mnemonic="M">
            <command
                  commandId="marker.commands.connect"
                  icon="icons/connect.png"
                  id="marker.menus.connectCommand"
                  label="Connect"
                  style="push">
            </command>
            <command
                  commandId="marker.commands.send"
                  icon="icons/send.png"
                  id="marker.menus.sendCommand"
                  label="Send to Server"
                  style="push">
            </command>
            <command
                  commandId="marker.commands.disconnect"
                  icon="icons/disconnect.png"
                  id="marker.menus.disconnectCommand"
                  label="Disconnect"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="marker.toolbars.AVIBToolbar">
            <command
                  commandId="marker.commands.send"
                  icon="icons/send.png"
                  label="Send to Server"
                  style="push">
            </command>
            <command
                  commandId="marker.commands.connect"
                  icon="icons/connect.png"
                  id="markertest.toolbars.connectCommand"
                  label="Connect to Server"
                  tooltip="Server connection">
            </command>
            <command
                  commandId="marker.commands.disconnect"
                  icon="icons/disconnect.png"
                  id="markertest.toolbars.disconnectCommand"
                  label="Disconnect to Server"
                  tooltip="Disconnection">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="com.mymarkers.mymarker"
         name="My Marker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <super
            type="org.eclipse.core.resources.marker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="org.eclipse.ui.articles.action.contribution.popup.navigator"
            targetID="#CompilationUnitEditorContext">
         <action
               class="marker.CreateMarkerAction"
               id="com.example.create.marker"
               label="Create Marker"
               menubarPath="additions">
         </action>
         <action
               class="marker.CountMarkersForFile"
               id="com.example.filecount.marker"
               label="Count Markers"
               menubarPath="additions">
         </action>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="Clarity.objectContribution2"
            objectClass="org.eclipse.jdt.core.IOpenable">
         <action
               class="marker.CountMarkersForFiles"
               id="com.example.foldercount.marker"
               label="Count Markers"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerType="com.myannotation"
            name="AVIB.myannotation"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
   </extension>
   <extension
         id="myannotationspecification"
         name="MyAnnotation"
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="com.myannotation"
            colorPreferenceKey="clcolor"
            includeOnPreferencePage="true"
            overviewRulerPreferenceKey="clruler"
            overviewRulerPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerUpdaters">
      <updater
            class="marker.logic.MarkerUpdater"
            id="AVIB.MarkerUpdater"
            markerType="com.myannotation">
      </updater>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="marker.logic.FileDecorator"
            id="AVIB.filedecorator"
            label="MyMarker Decorator">
      </decorator>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="avib">
         <property
               name="appName"
               value="avib">
         </property>
      </product>
   </extension>

</plugin>
